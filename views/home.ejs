<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/header') %>
    
    <div class="container my-5">
        <div class="row justify-content-center g-4">  <!-- g-4 para espacio entre columnas -->
            <!-- Card de Consolas -->
            <div class="col-12 col-md-6 col-lg-4">  <!-- 3 columnas en pantallas grandes -->
                <div class="card h-100 shadow-sm">  <!-- shadow-sm para sombra ligera -->
                    <img src="<%= '/images/consolas.png' %>" class="card-img-top img-fluid p-3" alt="imagen-consola">  <!-- img-fluid y p-3 para padding -->
                    <div class="card-body text-center">
                        <h5 class="card-title">Consolas registradas:</h5>
                        <p class="card-text fs-1 fw-bold" id="total-consolas"><%= total %></p>
                    </div>
                    <div class="card-footer bg-transparent border-0 d-grid gap-2">  <!-- d-grid gap-2 para botones apilados -->
                        <a href="/create" class="btn btn-success">Agregar consola</a>
                        <a href="/index" class="btn btn-info">Ver consolas</a>
                    </div>
                </div>
            </div>
            
            <!-- Card de Marcas -->
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm">
                    <img src="<%= '/images/brand.png' %>" class="card-img-top img-fluid p-3" alt="imagen-marca">
                    <div class="card-body text-center">
                        <h5 class="card-title">Total de marcas:</h5>
                        <p class="card-text fs-1 fw-bold" id="total-marcas"><%= totalmarcas %></p>
                    </div>
                    <div class="card-footer bg-transparent border-0 d-grid gap-2">
                        <a href="/marcas/create" class="btn btn-success">Agregar marca</a>
                        <a href="/marcas" class="btn btn-info">Ver marcas</a>
                    </div>
                </div>
            </div>

            <!-- Card de Categorías -->
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm">
                    <img src="<%= '/images/categoria.png' %>" class="card-img-top img-fluid p-3" alt="imagen-categoria">
                    <div class="card-body text-center">
                        <h5 class="card-title">Total de categorías:</h5>
                        <p class="card-text fs-1 fw-bold" id="total-categorias"><%= totalcategorias %></p>
                    </div>
                    <div class="card-footer bg-transparent border-0 d-grid gap-2">
                        <a href="/categorias/create" class="btn btn-success">Agregar categoría</a>
                        <a href="/categorias" class="btn btn-info">Ver categorías</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>